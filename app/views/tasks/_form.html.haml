= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :task_id
    = f.number_field :task_id
  .field
    = f.label :done
    = f.check_box :done
  .field
    = f.label :deadline
    = f.date_select :deadline
  .actions
    = f.submit 'Save'
